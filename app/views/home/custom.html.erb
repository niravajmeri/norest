<h1>Custom Model</h1>

<div class="col-lg-12">
  <div class="col-lg-6">
    <h2>Model</h2>
    <!--<pre class="prettyprint linenums" style="height: 500px; overflow: scroll;"><%#=@model%></pre>-->
    <%= form_tag({controller: :home, action: :execute_nusmv}, {class: 'form-horizontal'}) do %>
    <div class="form-group">
      <div class="col-sm-10">
      <%= text_area_tag :model, @model, class: 'form-control',  style: "height: 1000px; overflow: scroll;" %>
      </div>
      <%= submit_tag 'Execute', class: 'col-sm-2 btn  btn-info btn-sm' %>
    </div>
    <%end%>
  </div>
  <div class="col-lg-6">
    <h2>NuSMV Output </h2>
    <pre class="prettyprint linenums" style="height: 1000px; overflow: scroll;"><%#=@output%></pre>
  </div>

</div>
